html
 head
  script.
    var urls=!{JSON.stringify(urls)};
    var names=!{JSON.stringify(names)};
  script(type='text/javascript', src= '/timer.js')
  title #{title}
  style.
   body {
    background: #000;
    overflow: hidden;
   }
   @font-face {
   font-family: franklinGothic;
   src: url(ITCFranklinGothicStd-BkXCp.otf);
   }
   p {
   font-family: franklinGothic;
   transform: translateY(50%);
   }
   iframe {
   border: none;
   }
   #info {
    border-radius: 5px;
    position: absolute; 
    left: 30px; 
    bottom: 2%; 
    background-color: rgba(0,0,0,0.4); 
    color: rgba(255,255,255,0.7); 
    padding-left: 10px; 
    padding-right: 10px;
    font-family: 'ITCFranklinGothicStd-BkXCp';
    font-size: 32px; 
    line-height: 10px;"
   }
   #next {
    border-radius: 5px;
    position: absolute; 
    right: 20px; 
    bottom: 2%;  
    background-color: rgba(0,0,0,0.4); 
   }
   #previous {
    border-radius: 5px;
    position: absolute; 
    right: 50px; 
    bottom: 2%; 
    background-color: rgba(0,0,0,0.4); 
    -ms-transform: rotate(180deg); /* IE 9 */
    -webkit-transform: rotate(180deg); /* Safari */
    transform: rotate(180deg);
   }
   img {
    opacity: 0.7;
   }
 body(onload="load()")
  div#main
   iframe#frame(width='100%' height='100%', scrolling='no', frameBorder='0', seamless='seamless', webkitallowfullscreen, mozallowfullscreen, allowfullscreen)
   div#info
    p#text
   div#next(onclick="switchProject()")
    img(src='next.png' style='width:20px; height:20px;')
   div#previous(onclick="previousProject()")
    img(src='next.png' style='width:20px; height:20px;')
 
    


  